<div class="form-rdv fade-in-up ">
  <div class="space-y-12">
    <div class="border-b border-gray-900/10 pb-12">
      <h1>Formulaire</h1>

      <%= form_with model: @rdv, local: true, data: { turbo: false } do |form| %>
        <div class="mt-6 grid grid-cols-2 gap-x-6">
          <!-- Prénom dans la première colonne -->
          <div class="col-span-1">
            <label for="first_name" class="block text-sm font-medium text-bleu2">Prénom</label>
            <div class="mt-2">
              <%= form.text_field :first_name, required: true, placeholder:"Prénom", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
            </div>
          </div>

          <!-- Nom dans la deuxième colonne -->
          <div class="col-span-1">
            <label for="last_name" class="block text-sm font-medium text-bleu2">Nom</label>
            <div class="mt-2">
              <%= form.text_field :last_name, required: true, placeholder:"Nom", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
            </div>
          </div>
        </div>

        <div class="col-span-full">
          <label for="email" class="block text-sm font-medium text-bleu2">Email</label>
          <div class="mt-2">
            <%= form.email_field :email, required: true, placeholder:"abc@email.com", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-x-6">
          <!-- Numéro de téléphone dans la première colonne -->
          <div class="col-span-1">
            <label for="phone_number" class="block text-sm font-medium text-bleu2">Téléphone</label>
            <div class="mt-2">
              <%= form.text_field :phone, required: true, placeholder:"0601030404", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
            </div>
          </div>

          <!-- Code postal dans la deuxième colonne -->
          <div class="col-span-1">
            <label for="postal_code" class="block text-sm font-medium text-bleu2">Code postal</label>
            <div class="mt-2">
              <%= form.text_field :postal_code, required: true, placeholder:"78000", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
            </div>
          </div>
        </div>

        <div class="col-span-full">
          <label for="city" class="block text-sm font-medium text-bleu2">Ville</label>
          <div class="mt-2">
            <%= form.text_field :city, required: true, placeholder:"Versailles", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
          </div>
        </div>

<div class="grid grid-cols-2 gap-x-6">
  <!-- Date dans la première colonne -->
  <div class="col-span-1">
    <label for="phone_number" class="block text-sm font-medium text-bleu2">Date</label>
    <div class="mt-2">
<%= form.date_field :date, required: true, placeholder: "jj/mm/aaaa", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
    </div>
  </div>

  <!-- Hour dans la deuxième colonne -->
  <div class="col-span-1">
    <label for="postal_code" class="block text-sm font-medium text-bleu2">Heure</label>
    <div class="mt-2">
      <%= form.time_field :hour, required: true,placeholder: "h/m", class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
    </div>
  </div>
</div>

       <div class="col-span-full">
  <label for="prestation" class="block text-sm font-medium text-bleu2">Prestation</label>
  <div class="mt-2">
    <% options = [['--- Prestations ---', '']] +
                  @prestations.map { |p| [p.titre, "prestation_#{p.id}"] } +
                  [['--- Soins ---', '']] +
                  @soins.map { |s| [s.titre, "soin_#{s.id}"] } +
                  [['--- Accompagnements ---', '']] +
                  @accompagnements.map { |a| [a.titre, "accompagnement_#{a.id}"] } %>
    <%= form.select :prestation_id,
        options_for_select(options),
        { prompt: 'Sélectionnez une option' },
        { required: true, class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' } %>
  </div>
</div>


        <div class="col-span-full">
          <label for="message" class="block text-sm font-medium text-bleu2">Votre Message</label>
          <div class="mt-2">
            <%= form.text_area :message, rows: 3, required: true, placeholder:"Raison de votre demande de rdv ...",class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-green-800 sm:text-sm' %>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
          <%= form.submit 'Prendre RDV', class: 'button-rdv' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
