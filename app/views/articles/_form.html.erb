<div class="form-article">
<%= form_with(model: article, local: true, html: { class: 'form-with-margin' }) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="form-group">
    <%= form.label :published_at, "Date de publication" %>
    <%= form.datetime_select :published_at %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <% if article.image.attached? %>
    <div class="form-group">
      <p>Image actuelle :</p>
      <%= image_tag article.image, width: "200px" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.submit "Enregistrer", class: "btn btn-success" %>
  </div>
<% end %>
</div>
