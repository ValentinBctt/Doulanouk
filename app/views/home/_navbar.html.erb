<header class="bg-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="flex lg:flex-1">
      <a href="#" class="-m-1.5 p-1.5">
        <div class="logo">
          Anouk Doula
        </div>
      </a>
    </div>
    <div class="flex lg:hidden">
      <button id="menuButton" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 burger" style="font-size: 25px;">
        <i class="fa-solid fa-bars"></i>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="#" class="text-sm/6 font-semibold text-gray-900">Features</a>
      <a href="#" class="text-sm/6 font-semibold text-gray-900">Marketplace</a>
      <a href="#" class="text-sm/6 font-semibold text-gray-900">Prendre RDV</a>
    </div>
  </nav>

  <!-- Mobile menu, show/hide based on menu open state. -->
  <div id="mobileMenu" class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-nav px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between">
        <a href="#" class="-m-1.5 p-1.5">
          <div class="logo-white">
            Anouk Doula
          </div>
        </a>
        <button id="closeButton" type="button" class="-m-2.5 rounded-md p-2.5 text-white" style="font-size: 25px;">
          <i class="fa-solid fa-arrow-left"></i>
        </button>
      </div>
      <div class="flow-root">
        <div class="space-y-2 py-6 nav-link">
          <div class="nav">
            <%= link_to 'Mes prestations', prestations_path %> <br>
          </div>
          <div class="nav">
            <%= link_to 'Prendre Rendez-vous', new_rdv_path %> <br>
          </div>
          <br>
          <div class="nav">
          <%= link_to "https://www.instagram.com/anoukdoula/", target: "_blank", rel: "noopener" do %>
            <i class="fa-brands fa-instagram"></i> @anoukdoula
          <% end %>


          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('turbo:load', () => {
    console.log('turbo:load event triggered');
    const menuButton = document.getElementById('menuButton');
    const mobileMenu = document.getElementById('mobileMenu');
    const closeButton = document.getElementById('closeButton');

    if (menuButton && mobileMenu && closeButton) {
      console.log('Elements found');
      menuButton.addEventListener('click', () => {
        console.log('Menu button clicked');
        mobileMenu.classList.add('open');  // Ajoute la classe 'open' pour l'animation
      });

      closeButton.addEventListener('click', () => {
        console.log('Close button clicked');
        mobileMenu.classList.remove('open');  // Retire la classe 'open' pour r√©initialiser
      });
    } else {
      console.log('Elements not found');
    }
  });
</script>
