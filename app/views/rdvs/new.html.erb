  <div class="image-rdv-desktop">
    <%= image_tag "https://res.cloudinary.com/dnojcwwos/image/upload/v1753793646/Rdv_mhmmya.jpg", style: "max-width: 100%; height: auto; border-radius: 1rem;" %>
