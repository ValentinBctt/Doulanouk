<header class="bg-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-center p-2 lg:px-8 shadow-sm" style="min-height: 40px;" aria-label="Global">
    <div class="flex items-center">
      <%= image_tag 'https://res.cloudinary.com/dnojcwwos/image/upload/v1741631422/gjya000wqr9435bkyu0gjjv9dnw3.png', alt: 'logo', style: 'margin: 0.5rem 0 0.5rem 0; width: 3rem; border-radius: 5px;' %>
    </div>

    <!-- Bouton menu hamburger visible sur toutes les tailles d'écran -->
    <div class="flex items-center">
      <button id="menuButton" type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 burger" style="font-size: 25px;">
        <i class="fa-solid fa-bars"></i>
      </button>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div id="mobileMenu"  role="dialog" aria-modal="true">

    <!-- Background backdrop, show/hide based on slide-over state -->
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-nav px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="relative flex flex-col items-center">
        <button id="closeButton"
                type="button"
                class="-m-2.5 rounded-md p-2.5 text-white"
                style="font-size: 25px; position: absolute; top: 0; right: 0;">
          <i class="fa-solid fa-xmark"></i>
        </button>
        <a href="#" class="-m-1.5 p-1.5 mt-4 flex justify-center w-full">
          <div class="logo-white">
            <%= image_tag "logoAnoukDoula.png", alt: "logo", class: "logo-white", style: "width: 8rem; height: auto;" %>
          </div>
        </a>
      </div>
      <div class="flow-root">
        <div class="space-y-2 py-6 nav-link">
          <div class="nav">
            <%= link_to 'Home', home_index_path %>
          </div>

          <div class="nav">
            <%= link_to 'Mon offre', prestations_path %>
          </div>

          <div class="nav">
            <%= link_to 'Prendre Rendez-vous', new_rdv_path %>
          </div>

          <div class="nav">
            <%= link_to 'Blog', articles_path %>
          </div>

          <div class="nav">
            <%= link_to "https://www.instagram.com/anoukdoula/", target: "_blank", rel: "noopener" do %>
              <i class="fa-brands fa-instagram icon-spacing"></i> @anoukdoula
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    console.log('DOMContentLoaded event triggered');
    const menuButton = document.getElementById('menuButton');
    const mobileMenu = document.getElementById('mobileMenu');
    const closeButton = document.getElementById('closeButton');

    if (menuButton && mobileMenu && closeButton) {
      console.log('Elements found');
      menuButton.addEventListener('click', () => {
        console.log('Menu button clicked');
        mobileMenu.classList.add('open');  // Ajoute la classe 'open' pour l'animation
      });

      closeButton.addEventListener('click', () => {
        console.log('Close button clicked');
        mobileMenu.classList.remove('open');  // Retire la classe 'open' pour réinitialiser
      });
    } else {
      console.log('Elements not found');
    }
  });
</script>
